@using E_Commerce.Models.ViewModels
@{
    ViewData["Title"] = "Register";
}
@model RegisterVM


<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Shop</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item"><a href="#">User</a></li>
        <li class="breadcrumb-item active text-white">Register</li>
    </ol>
</div>
<!-- Single Page Header End -->

<div class="container-fluid py-5 bg-light">
    <div class="container py-5">
        <h1 class="mb-4 text-center text-primary">Register</h1>

        <div class="row justify-content-center">
            <form asp-action="Register" method="post" class="col-lg-8">
                <!-- Validation Summary -->
				<div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert" style="list-style: none;"></div>

                <div class="row g-4">
                    <!-- Email Field -->
                    <div class="col-md-6">
                        <div class="form-item w-100">
                            <label asp-for="@Model.Email" class="form-label fw-bold">Email</label><sup>*</sup>
                            <input asp-for="@Model.Email" class="form-control form-control-lg" placeholder="Email" type="email">
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Full Name Field -->
                    <div class="col-md-6">
                        <div class="form-item w-100">
                            <label asp-for="@Model.FullName" class="form-label fw-bold">Full Name</label><sup>*</sup>
                            <input asp-for="@Model.FullName" class="form-control form-control-lg" placeholder="Full Name">
                            <span asp-validation-for="@Model.FullName" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Password Field -->
                    <div class="col-md-6">
                        <div class="form-item w-100">
                            <label asp-for="@Model.Password" class="form-label fw-bold">Password</label><sup>*</sup>
                            <input asp-for="@Model.Password" class="form-control form-control-lg" type="password"
                                placeholder="Password">
                            <span asp-validation-for="@Model.Password" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Confirm Password Field -->
                    <div class="col-md-6">
                        <div class="form-item w-100">
                            <label asp-for="@Model.ConfirmPassword" class="form-label fw-bold">Confirm Password</label><sup>*</sup>
                            <input asp-for="@Model.ConfirmPassword" class="form-control form-control-lg" type="password"
                                placeholder="Confirm Password">
                            <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Phone Field -->
                    <div class="col-md-6">
                        <div class="form-item w-100">
                            <label asp-for="@Model.PhoneNumber" class="form-label fw-bold">Phone Number</label>
                            <input asp-for="@Model.PhoneNumber" class="form-control form-control-lg" placeholder="Phone Number">
                            <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Address Field -->
                    <div class="col-md-6">
                        <div class="form-item w-100">
                            <label asp-for="@Model.Address" class="form-label fw-bold">Address</label>
                            <input asp-for="@Model.Address" class="form-control form-control-lg" placeholder="Address">
                            <span asp-validation-for="@Model.Address" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="row text-center align-items-center justify-content-center pt-4">
                    <div class="col-md-6">
                        <button type="submit" class="btn btn-primary btn-lg w-100">Register</button>
                    </div>
                </div>
            </form>

            <!-- Already have an account -->
            <div class="row text-center mt-4">
                <div class="col-md-12">
                    <p class="mb-0">Already have an account?
                        <a asp-action="Login" class="text-primary fw-bold">Login here</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
